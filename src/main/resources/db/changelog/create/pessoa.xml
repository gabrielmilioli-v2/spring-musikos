<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-pessoa" author="gabriel.milioli">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="pessoa"/>
            </not>
        </preConditions>
        <createTable tableName="pessoa">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="sobrenome" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="id_posicao_banda" type="integer"/>
        </createTable>
    </changeSet>


    <changeSet id="add-fk-pessoa-posicao-banda" author="gabriel.milioli">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="pessoa"/>
                <tableExists tableName="posicao_banda"/>
                <not>
                    <foreignKeyConstraintExists foreignKeyName="fk_pessoa_posicao_banda"
                                                foreignKeyTableName="pessoa"/>
                </not>
            </and>
        </preConditions>
        <addForeignKeyConstraint baseTableName="pessoa"
                                 baseColumnNames="id_posicao_banda"
                                 constraintName="fk_pessoa_posicao_banda"
                                 referencedTableName="posicao_banda"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>