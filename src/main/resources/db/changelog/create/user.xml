<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_table_user" author="gabriel.milioli">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="id_instrument" type="integer"/>
        </createTable>
    </changeSet>


    <changeSet id="add_fk_user_instrument" author="gabriel.milioli">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="user"/>
                <tableExists tableName="instrument"/>
                <not>
                    <foreignKeyConstraintExists foreignKeyName="fk_user_instrument"
                                                foreignKeyTableName="user"/>
                </not>
            </and>
        </preConditions>
        <addForeignKeyConstraint baseTableName="user"
                                 baseColumnNames="id_instrument"
                                 constraintName="fk_user_instrument"
                                 referencedTableName="instrument"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>